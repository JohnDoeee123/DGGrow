<div class="container">
    <div id="pageToast" class="toast hide" data-autohide="true">
        <div class="toast-header">
            <strong class="mr-auto text-primary"></strong>
            <small class="text-muted"></small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
        </div>
        <div class="toast-body">aaa
        </div>
    </div>
</div>


<div class="row" style="margin-top: 10px">
    <div class="col-sm-5">

    </div>
    <div class="col-sm-5">
        <form id="newProduct">
            <div><h2>Add a new product</h2></div>
            <div class="form-group">
                <label for="productName">Product Name:</label>
                <input type="text" required maxlength="50" class="form-control" id="productName"
                       placeholder="Ex: Green Potatoes">
            </div>
            <div class="form-group">
                <label for="productID">Product ID:</label>
                <input type="number" required max="9999999999999" class="form-control" id="productID"
                       placeholder="Ex: 1234">
            </div>
            <div class="form-group">
                <label for="productManager">Product manager:</label>
                <input type="text" maxlength="30" class="form-control" id="productManager"
                       placeholder="Ex: Eva Jones">
            </div>
            <div class="form-group">
                <label for="salesStartDate">Sales start date:</label>
                <input type="date" required maxlength="10" class="form-control" id="salesStartDate"
                       max="9999-12-31">
            </div>

            <button id="addNewProduct" class="btn btn-primary">Submit</button>
            <button id="resetNewProductForm" class="btn btn-primary">Clear input data</button>
        </form>
    </div>
    <div class="col-sm-2">
        <form class="form-inline my-2 my-lg-0" action="{{ path('logout') }}">

        </form>
    </div>
</div>


</div>
